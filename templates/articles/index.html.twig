{% extends 'base.html.twig' %}
{% block title%} Liste des Articles{% endblock %}
{% block body %}
{% if articles %}
 <table id="articles" class="table table-striped">
 <thead>
 <tr>
 <th>Name</th>
 <th>Price</th>
 <th>Catégorie</th>
 <th>Actions</th>
 <th>Modification</th>
 <th>delete</th>
 </tr>
 </thead>
 <tbody>
 {% for article in articles %}
 <tr>
 <td>{{ article.nom }}</td>
 <td>{{ article.prix }}</td>
 <td>{{ article.category.titre }}</td>
 <td>
 <a href="/article/{{ article.id }}" class="btn btn-info">Détails</a>
</td>
<td>
<a href="/article/edit/{{ article.id }}" class="btn btn-primary">Modify</a>
</td>
<td>
<a href="/article/delete/{{ article.id }}" class="btn btn-danger"onclick="return confirm('Etes-vous sûr de supprimer cet article?');">delete</a></td>
 </tr>
 {% endfor %}
 </tbody>
 </table>
 {% else %}
 <p>Aucun articles</p>
 {% endif %}
{% endblock %}